@model Task5.Dtos.Team.AddTeamDto
@{
    ViewBag.Title = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Match List</h2>
        </div>


        <div id="PlaceHolderHere"></div>
        <a asp-controller="Match" asp-action="CreateView" class="btn btn-primary mx-2">
      <i class="fas fa-edit">Create new match</i></a>
    

    </div>
</div>
<br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th></th>
            <th>
               Host
            </th>
            <th>
               Guest
            </th>
            <th>
               Time
            </th>
            <th>
               Place
            </th>
            <th>Result</th>
            <th>
               Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in ViewBag.Matches)
        {
            <tr>
                <td width="30%">@obj.Status</td>
                <td width="30%">@obj.HostTeam</td>
                <td width="30%">@obj.GuestTeam</td>
                <td width="30%">@obj.MatchTime</td>
                <td width="30%">@obj.MatchPlace</td>
                <td width="30%">@obj.Result</td>
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Match" asp-route-Id="@obj.MatchId" asp-action="Details" class="btn btn-primary mx-2">
                            <i class="fas fa-edit">Details</i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
