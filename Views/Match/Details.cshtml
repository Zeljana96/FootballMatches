@model Task5.Dtos.Match.GetMatchDto

<script src="~/lib/jquery/dist/jquery-3.5.1.min.js" type="text/javascript"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<link rel="stylesheet" href="~/css/site.css" />

<div class="container">
    <div class="row align-items-start">
        <div class="col">
            <label>@Model.HostTeam</label>
            <a asp-controller="Match" asp-route-Id="@Model.HostTeam+@Model.MatchId" asp-action="AddGoal" class="btn btn-primary mx-2">
                            <i class="fas fa-edit">Add Goal</i>
                        </a>
        </div>
        <div class="col">
            <h1><span class="label label-default">@Model.Result</span></h1>
        </div>
        <div class="col">
            <label>@Model.GuestTeam</label>
            <a asp-controller="Match" asp-route-Id="@Model.GuestTeam+@Model.MatchId" asp-action="AddGoal" class="btn btn-primary mx-2">
                            <i class="fas fa-edit">Add Goal</i>
                        </a>
        </div>
    </div>
    <div class="row align-items-start">
        <div class="col">
            <div class="panel panel-primary">
                <div class="panel-heading">Host team players</div>
                <div class="panel-body">
                    @foreach (var hostPlayer in ViewBag.Host)
                    {
                        <li>@hostPlayer</li>
                    }
                </div>
            </div>
        </div>
        <div class="col">
        </div>
        <div class="col">
            <div class="panel panel-primary">
                <div class="panel-heading">Guest team players</div>
                <div class="panel-body">
                    @foreach (var guestPlayer in ViewBag.Guest)
                    {
                        <li>@guestPlayer</li>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<br /> <br />
<br /> <br />
<div class="form-group row">
        <div class="col-8 offset-4 row">
            <div class="col">
                <a asp-controller="Match" asp-action="Index" class="btn btn-success w-100">Finish</a>
            </div>
            <div class="col">
                <a asp-controller="Match" asp-action="Index" class="btn btn-success w-100">Cancel</a>
            </div>
        </div>
        <div class="col-8">

        </div>
    </div>