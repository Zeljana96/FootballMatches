@model Task5.Dtos.Team.AddTeamDto

<div class="modal fade" id="createTeamModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h3 class="modal-title" id="addTeamLabel">Create new team</h3>
                <a href="#" class="close" data-dismiss="modal">&times;</a>


            </div>
            <div class="modal-body">

                <form action="AddTeam">
                    <div class="form-group">
                        <label asp-for="Name">Team name:</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc">Desc:</label>
                        <input asp-for="Desc" class="form-control" />
                        <span asp-validation-for="Desc" class="text-danger"></span>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
                <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>


            </div>

        </div>

    </div>

</div>